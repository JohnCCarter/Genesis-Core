{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genesis-core.local/schemas/compact.schema.json",
  "title": "Genesis-Core Compact",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "title",
    "description",
    "status",
    "scopes",
    "rules",
    "owners"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_\\-]{2,63}$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "title": { "type": "string", "minLength": 3, "maxLength": 120 },
    "description": { "type": "string", "minLength": 10, "maxLength": 5000 },
    "status": { "type": "string", "enum": ["dev", "stable"] },
    "owners": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "uniqueItems": true
    },
    "scopes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "uniqueItems": true
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "text"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z][a-z0-9_\\-]{2,63}$" },
          "text": { "type": "string", "minLength": 5, "maxLength": 2000 }
        }
      },
      "minItems": 1
    },
    "enforcement": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ci_required": { "type": "boolean" },
        "notes": { "type": "string", "maxLength": 2000 }
      }
    }
  }
}
