{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genesis-core.local/schemas/manifest.schema.json",
  "title": "Genesis-Core Registry Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["registry_version", "skills", "compacts"],
  "properties": {
    "registry_version": { "type": "integer", "minimum": 1, "maximum": 1 },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "version"],
        "properties": {
          "id": { "type": "string" },
          "version": { "type": "string" }
        }
      },
      "uniqueItems": true
    },
    "compacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "version"],
        "properties": {
          "id": { "type": "string" },
          "version": { "type": "string" }
        }
      },
      "uniqueItems": true
    }
  }
}
