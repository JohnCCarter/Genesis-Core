{
  "server_name": "genesis-core",
  "version": "1.1.0",

  "features": {
    "code_execution": true,
    "file_operations": true,
    "git_integration": true
  },

  "log_file": "logs/mcp_server.log",
  "log_level": "INFO",

  "security": {
    "allowed_paths": [
      "AGENTS.md",
      "CHANGELOG.md",
      "README.md",
      "pyproject.toml",
      "config",
      "docs",
      ".env.example",
      "mcp_server",
      "results",
      "registry",
      "scripts",
      "src",
      "tmp",
      "tests"
    ],
    "blocked_patterns": [
      ".git",
      "__pycache__",
      "*.pyc",
      "node_modules",
      ".env",
      ".nonce_tracker.json",
      "dev.overrides.local.json"
    ],
    "execution_timeout_seconds": 30,
    "max_file_size_mb": 10
  },

  "tools": [
    {
      "name": "read_file",
      "description": "Read a file from the repository",
      "permissions": ["file_operations"]
    },
    {
      "name": "search",
      "description": "Search text within the repository",
      "permissions": ["file_operations"]
    },
    {
      "name": "write_file",
      "description": "Create or overwrite a file",
      "permissions": ["file_operations"]
    },
    {
      "name": "apply_patch",
      "description": "Apply a unified diff patch to an existing file",
      "permissions": ["file_operations", "git_integration"]
    },
    {
      "name": "exec",
      "description": "Execute a whitelisted shell command",
      "permissions": ["code_execution"],
      "command_allowlist": [
        "git",
        "pytest",
        "python",
        "ruff",
        "mypy",
        "make"
      ]
    }
  ]
}
